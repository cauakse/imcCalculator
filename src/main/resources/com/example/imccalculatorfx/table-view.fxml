<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane maxHeight="600.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.imccalculatorfx.TableController">
    <center>
        <TableView fx:id="tabela" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colNome" maxWidth="1.7976931348623157E308" minWidth="200.0" prefWidth="-1.0" text="NOME" />
                <TableColumn fx:id="colPeso" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="PESO" />
                <TableColumn fx:id="colAltura" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="ALTURA" />
                <TableColumn fx:id="colIMC" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="IMC" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
